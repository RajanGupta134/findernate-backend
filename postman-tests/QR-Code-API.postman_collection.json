{
  "info": {
    "name": "FINDERNATE QR Code API",
    "description": "Test collection for dynamic QR code generation with Instagram-like features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "testUsername",
      "value": "johndoe",
      "type": "string",
      "description": "Valid username from your database"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Public QR Endpoints",
      "item": [
        {
          "name": "1. Basic QR Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}?size=512&color=%23000000&bg=%23FFFFFF",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}"],
              "query": [
                {
                  "key": "size",
                  "value": "512",
                  "description": "QR code size in pixels"
                },
                {
                  "key": "color",
                  "value": "%23000000",
                  "description": "Foreground color (URL encoded hex)"
                },
                {
                  "key": "bg",
                  "value": "%23FFFFFF",
                  "description": "Background color (URL encoded hex)"
                }
              ]
            },
            "description": "Generate basic QR code for any user profile"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is PNG image', function () {",
                  "    pm.expect(pm.response.headers.get('Content-Type')).to.include('image/png');",
                  "});",
                  "",
                  "pm.test('Has cache headers', function () {",
                  "    pm.expect(pm.response.headers.get('Cache-Control')).to.include('public');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "2. Instagram Style QR",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/styled?style=instagram&size=512",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "styled"],
              "query": [
                {
                  "key": "style",
                  "value": "instagram",
                  "description": "Style: none, instagram, findernate"
                },
                {
                  "key": "size",
                  "value": "512"
                }
              ]
            },
            "description": "Generate Instagram-style QR with gradient border and logo"
          },
          "response": []
        },
        {
          "name": "3. FINDERNATE Branded QR",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/styled?style=findernate&size=400&color=%236C5CE7",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "styled"],
              "query": [
                {
                  "key": "style",
                  "value": "findernate"
                },
                {
                  "key": "size",
                  "value": "400"
                },
                {
                  "key": "color",
                  "value": "%236C5CE7",
                  "description": "FINDERNATE brand purple"
                }
              ]
            },
            "description": "Generate FINDERNATE branded QR with custom colors"
          },
          "response": []
        },
        {
          "name": "4. Mobile Deep Link QR (Universal)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/mobile?platform=universal&size=512",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "mobile"],
              "query": [
                {
                  "key": "platform",
                  "value": "universal",
                  "description": "Platform: ios, android, universal"
                },
                {
                  "key": "size",
                  "value": "512"
                }
              ]
            },
            "description": "Generate QR with deep linking for mobile apps"
          },
          "response": []
        },
        {
          "name": "5. Mobile Deep Link QR (iOS)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/mobile?platform=ios&size=256",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "mobile"],
              "query": [
                {
                  "key": "platform",
                  "value": "ios"
                },
                {
                  "key": "size",
                  "value": "256"
                }
              ]
            },
            "description": "iOS-specific deep link QR code"
          },
          "response": []
        },
        {
          "name": "6. QR Code Information (JSON)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/info",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "info"]
            },
            "description": "Get QR code metadata and available formats"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response is JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});",
                  "",
                  "pm.test('Has user and QR info', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('user');",
                  "    pm.expect(jsonData.data).to.have.property('qrInfo');",
                  "    pm.expect(jsonData.data).to.have.property('availableFormats');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "7. Batch QR Generation",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/batch?formats=basic,styled,instagram,mobile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "batch"],
              "query": [
                {
                  "key": "formats",
                  "value": "basic,styled,instagram,mobile",
                  "description": "Comma-separated format list"
                }
              ]
            },
            "description": "Generate multiple QR formats in one request"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Has QR codes object', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('qrCodes');",
                  "});",
                  "",
                  "pm.test('Has requested formats', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const qrCodes = jsonData.data.qrCodes;",
                  "    pm.expect(qrCodes).to.have.property('basic');",
                  "    pm.expect(qrCodes).to.have.property('styled');",
                  "    pm.expect(qrCodes).to.have.property('instagram');",
                  "    pm.expect(qrCodes).to.have.property('mobile');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "8. Validate QR Target",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/{{testUsername}}/validate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "{{testUsername}}", "validate"]
            },
            "description": "Check if username exists and is active"
          },
          "response": []
        }
      ],
      "description": "Public QR code endpoints that don't require authentication"
    },
    {
      "name": "Authenticated QR Endpoints",
      "item": [
        {
          "name": "9. My QR Code (Image)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/my-qr?style=instagram&size=512",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "my-qr"],
              "query": [
                {
                  "key": "style",
                  "value": "instagram",
                  "description": "Style: basic, styled, instagram, findernate"
                },
                {
                  "key": "size",
                  "value": "512"
                }
              ]
            },
            "description": "Get authenticated user's QR code as image"
          },
          "response": []
        },
        {
          "name": "10. My QR Code (JSON)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/my-qr?format=json&size=256",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "my-qr"],
              "query": [
                {
                  "key": "format",
                  "value": "json",
                  "description": "Response format: image or json"
                },
                {
                  "key": "size",
                  "value": "256"
                }
              ]
            },
            "description": "Get authenticated user's QR code as base64 JSON"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Has QR data URL', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('qrCodeDataURL');",
                  "    pm.expect(jsonData.data.qrCodeDataURL).to.include('data:image/png;base64');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ],
      "description": "QR endpoints that require authentication"
    },
    {
      "name": "Error Test Cases",
      "item": [
        {
          "name": "11. Invalid Username Format",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/invalid@username",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "invalid@username"]
            },
            "description": "Test with invalid username format"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Error message about invalid format', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.message).to.include('Invalid username format');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "12. Non-existent User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/qr/nonexistentuser12345",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "qr", "nonexistentuser12345"]
            },
            "description": "Test with username that doesn't exist"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 404', function () {",
                  "    pm.response.to.have.status(404);",
                  "});",
